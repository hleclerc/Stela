class CUInt
    data := ___repeat PI8, x => ( res := 1; while x.data[ res ] >= 128; ++res; res )
    
    static def size_init _val
        res := 8
        val := _val
        while val >= 128
            val /= 128
            res += 8
        make_varargs data = res

    def init _val
        cpt := 0
        val := _val
        while true
            data[ cpt ] = _val % 128
            if _val < 128
                break
            val /= 128
            cpt += 1

